startup_message off

# ctrl+j instead of ctrl+a
escape ^Jj

hardstatus off
hardstatus alwayslastline
hardstatus alwayslastline "%?%{gk}%-Lw%?%{mk}%n*%f %t%?(%u)%?%?%{gk}%+Lw%?%{Yk}"

# start with 1 instead of 0
bind c screen 1
bind ^c screen 1
bind 0 select 10

# initial windows
screen -t "git" 1
screen -t "jboss" 2
screen -t "mysql" 3
screen -t "devel" 4